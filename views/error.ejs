<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="error-container">
    <div class="code-window">
        <div class="window-header">
            <div class="window-buttons">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <div class="window-title">error.log</div>
        </div>
        <div class="code-content">
            <div class="line-numbers">
                <span>1</span>
                <span>2</span>
                <span>3</span>
                <span>4</span>
                <span>5</span>
            </div>
            <div class="code-text">
                <div class="typing-text">
                    <span class="comment">// Error encountered in production</span>
                    <span class="keyword">throw new</span> <span class="error-class">Error</span><span class="punctuation">(</span><span class="string">'404_NOT_FOUND'</span><span class="punctuation">)</span><span class="semicolon">;</span>
                    <span class="comment">// <%= message || 'Page not found' %></span>
                    <span class="keyword">const</span> <span class="variable">solution</span> <span class="operator">=</span> <span class="keyword">async</span> <span class="punctuation">()</span> <span class="operator">=></span> <span class="punctuation">{</span>
                    <span class="return">return</span> <span class="method">navigate</span><span class="punctuation">(</span><span class="string">'/'</span><span class="punctuation">)</span><span class="semicolon">;</span>
                </div>
            </div>
        </div>
    </div>
    <div class="error-actions">
        <a href="/" class="btn-home">
            <span class="btn-text">$ cd ~/home</span>
            <div class="btn-glitch"></div>
        </a>
    </div>
</div>

<style>
.error-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #0d1117;
    padding: 2rem;
    position: relative;
    overflow: hidden;
}

.error-container::before {
    content: '';
    position: absolute;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, #0f0f, #0f0f, #00ff9544);
    animation: glowGrid 20s linear infinite;
    opacity: 0.1;
    background-size: 50px 50px;
    background-image: 
        linear-gradient(0deg, transparent 24%, 
            rgba(0, 255, 149, 0.05) 25%, 
            rgba(0, 255, 149, 0.05) 26%, 
            transparent 27%, transparent 74%),
        linear-gradient(90deg, transparent 24%, 
            rgba(0, 255, 149, 0.05) 25%, 
            rgba(0, 255, 149, 0.05) 26%, 
            transparent 27%, transparent 74%);
}

.code-window {
    background: #1a1b26;
    border-radius: 8px;
    box-shadow: 0 0 30px rgba(0, 255, 149, 0.1);
    width: 100%;
    max-width: 600px;
    margin-bottom: 2rem;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(0, 255, 149, 0.1);
}

.window-header {
    background: #16171d;
    padding: 12px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.window-buttons {
    display: flex;
    gap: 8px;
    margin-right: 16px;
}

.window-buttons span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #ff5f56;
}

.window-buttons span:nth-child(2) {
    background: #ffbd2e;
}

.window-buttons span:nth-child(3) {
    background: #27c93f;
}

.window-title {
    color: #607B96;
    font-family: 'Fira Code', monospace;
    font-size: 14px;
}

.code-content {
    padding: 20px;
    display: flex;
    min-height: 200px;
}

.line-numbers {
    color: #607B96;
    padding-right: 20px;
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    user-select: none;
}

.line-numbers span {
    display: block;
    font-family: 'Fira Code', monospace;
    font-size: 14px;
    line-height: 1.5;
}

.code-text {
    padding-left: 20px;
    flex: 1;
}

.typing-text span {
    display: inline-block;
    font-family: 'Fira Code', monospace;
    font-size: 14px;
    line-height: 1.5;
    opacity: 0;
    animation: typeIn 0.5s forwards;
}

.comment { color: #607B96; }
.keyword { color: #FF7B72; }
.error-class { color: #79C0FF; }
.string { color: #A5D6FF; }
.punctuation { color: #C9D1D9; }
.variable { color: #FFA657; }
.operator { color: #FF7B72; }
.method { color: #D2A8FF; }
.return { color: #FF7B72; }
.semicolon { color: #C9D1D9; }

.btn-home {
    position: relative;
    padding: 12px 24px;
    background: #1a1b26;
    border: 1px solid #00ff95;
    color: #00ff95;
    text-decoration: none;
    font-family: 'Fira Code', monospace;
    font-size: 16px;
    letter-spacing: 1px;
    overflow: hidden;
    transition: 0.3s;
    border-radius: 4px;
}

.btn-home:hover {
    background: #00ff9522;
    box-shadow: 0 0 30px rgba(0, 255, 149, 0.2);
}

.btn-glitch {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #00ff95;
    filter: blur(30px);
    opacity: 0;
    transition: 0.3s;
}

.btn-home:hover .btn-glitch {
    opacity: 0.3;
}

@keyframes typeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes glowGrid {
    0% {
        transform: translateX(-50%) translateY(-50%) rotate(0deg);
    }
    100% {
        transform: translateX(-50%) translateY(-50%) rotate(360deg);
    }
}

.typing-text span:nth-child(1) { animation-delay: 0.1s; }
.typing-text span:nth-child(2) { animation-delay: 0.2s; }
.typing-text span:nth-child(3) { animation-delay: 0.3s; }
.typing-text span:nth-child(4) { animation-delay: 0.4s; }
.typing-text span:nth-child(5) { animation-delay: 0.5s; }

@media (max-width: 768px) {
    .code-window {
        margin: 1rem;
        font-size: 12px;
    }
    
    .window-title {
        font-size: 12px;
    }
    
    .code-content {
        padding: 10px;
    }
    
    .btn-home {
        font-size: 14px;
        padding: 10px 20px;
    }
}
</style>

<%- include('partials/footer') %>