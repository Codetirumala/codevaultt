<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container mt-4">
    <% if (user) { %>
        <h1>Welcome, <%= user.leetcodeUsername %>!</h1>
        <h2>Your LeetCode Profile</h2>

        <% if (error) { %>
            <div class="alert alert-danger mt-4" role="alert">
                <%= error %>
            </div>
        <% } %>

        <% if (profile) { %>
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <h3 class="card-title mb-4">Profile Details</h3>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>Basic Info</h4>
                                    <p><strong>Username:</strong> <%= profile.username || 'N/A' %></p>
                                    <p><strong>Ranking:</strong> <%= profile.ranking || 'N/A' %></p>
                                </div>
                                
                                <div class="col-md-6">
                                    <h4>Problem Solving Stats</h4>
                                    <p><strong>Total Solved:</strong> <%= profile.totalSolved || '0' %></p>
                                    <p><strong>Easy Solved:</strong> <%= profile.easySolved || '0' %></p>
                                    <p><strong>Medium Solved:</strong> <%= profile.mediumSolved || '0' %></p>
                                    <p><strong>Hard Solved:</strong> <%= profile.hardSolved || '0' %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } else if (!error) { %>
            <div class="alert alert-info mt-4" role="alert">
                Loading profile information...
            </div>
        <% } %>
    <% } else { %>
        <div class="alert alert-warning mt-4" role="alert">
            Please log in to view your profile.
        </div>
    <% } %>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .card-body {
        padding: 2rem;
    }
    .card-title {
        color: #2c3e50;
        font-weight: bold;
    }
    h4 {
        color: #34495e;
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }
    p {
        margin-bottom: 0.75rem;
        color: #2c3e50;
        font-size: 1rem;
    }
    strong {
        color: #7f8c8d;
        margin-right: 0.5rem;
    }
    .alert {
        border-radius: 10px;
    }
</style>

<%- include('partials/footer') %>