.signal-bar.active:nth-child(1) { animation-delay: 0.1s; }
.signal-bar.active:nth-child(2) { animation-delay: 0.2s; }
.signal-bar.active:nth-child(3) { animation-delay: 0.3s; }
.signal-bar.active:nth-child(4) { animation-delay: 0.4s; }
</style>

<script>
function updateSignalStrength() {
    const wrapper = document.querySelector('.signal-wrapper');
    const bars = document.querySelectorAll('.signal-bar');
    const statusText = document.querySelector('.connection-status');
    
    if (!navigator.onLine) {
        wrapper.dataset.strength = 'no-signal';
        statusText.textContent = 'Offline';
        bars.forEach(bar => bar.classList.remove('active'));
        return;
    }

    const connection = navigator.connection || navigator.mozConnection || navigator.webkitConnection;
    let strength = 4;
    let status = 'Strong';

    if (connection) {
        switch(connection.effectiveType) {
            case 'slow-2g':
                strength = 1;
                status = 'Weak';
                wrapper.dataset.strength = 'weak';
                break;
            case '2g':
                strength = 2;
                status = 'Fair';
                wrapper.dataset.strength = 'weak';
                break;
            case '3g':
                strength = 3;
                status = 'Good';
                wrapper.dataset.strength = 'medium';
                break;
            case '4g':
                strength = 4;
                status = 'Strong';
                wrapper.dataset.strength = 'strong';
                break;
        }
    }

    statusText.textContent = status;
    
    bars.forEach((bar, index) => {
        if (index < strength) {
            bar.classList.add('active');
        } else {
            bar.classList.remove('active');
        }
    });
}

// Update signal strength initially and when connection changes
updateSignalStrength();
window.addEventListener('online', updateSignalStrength);
window.addEventListener('offline', updateSignalStrength);
if (navigator.connection) {
    navigator.connection.addEventListener('change', updateSignalStrength);
}
</script> 