<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h2><%= locals.isAdmin ? 'Admin Sign Up' : 'User Sign Up' %></h2>
          <% if (!locals.adminExists) { %>
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="adminToggle" 
                     onchange="window.location.href=this.checked ? '?type=admin' : '?type=user'"
                     <%= locals.isAdmin ? 'checked' : '' %>>
              <label class="form-check-label" for="adminToggle">Admin</label>
            </div>
          <% } %>
        </div>
        <div class="card-body">
          <% if (locals.error) { %>
            <div class="alert alert-danger alert-dismissible fade show">
              <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% } %>

          <% if (locals.adminExists && !locals.user) { %>
            <div class="alert alert-info">
              Admin account already exists. Please sign up as a regular user.
            </div>
          <% } %>

          <form action="/signup" method="POST">
            <input type="hidden" name="isAdmin" value="<%= locals.isAdmin ? 'true' : 'false' %>">
            
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>

            <% if (!locals.isAdmin) { %>
              <div class="mb-3" id="leetcodeField">
                <label for="leetcodeUsername" class="form-label">LeetCode Username</label>
                <input type="text" class="form-control" id="leetcodeUsername" name="leetcodeUsername" required>
              </div>
            <% } %>

            <button type="submit" class="btn btn-primary w-100">Sign Up</button>
          </form>
          <p class="mt-3 text-center">
            Already have an account? <a href="/signin">Sign In</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const adminToggle = document.getElementById('adminToggle');
    const leetcodeField = document.getElementById('leetcodeField');

    if (adminToggle && leetcodeField) {
        adminToggle.addEventListener('change', function() {
            leetcodeField.style.display = this.checked ? 'none' : 'block';
            const leetcodeInput = document.getElementById('leetcodeUsername');
            if (leetcodeInput) {
                leetcodeInput.required = !this.checked;
            }
        });
    }
});
</script>

<%- include('partials/footer') %> 