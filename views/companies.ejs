<style>
:root {
    --primary-gradient: linear-gradient(135deg, #00ff95 0%, #00b8ff 100%);
    --card-bg: rgba(31, 31, 35, 0.8);
    --hover-bg: rgba(255, 255, 255, 0.1);
}

.companies-container {
    padding: 3rem 5%;
    min-height: 100vh;
    background: var(--primary-bg);
}

.companies-header {
    text-align: center;
    margin-bottom: 3rem;
}

.companies-header h1 {
    font-size: 2.5rem;
    color: #fff;
    margin-bottom: 1rem;
}

.subtitle {
    color: #888;
    font-size: 1.1rem;
    margin-bottom: 2rem;
}

.search-filter-container {
    max-width: 800px;
    margin: 0 auto;
}

.search-box {
    position: relative;
    margin-bottom: 1.5rem;
}

.search-box input {
    width: 100%;
    padding: 1rem 3rem;
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.05);
    color: #fff;
    font-size: 1rem;
}

.search-box i {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #888;
}

.filter-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
}

.filter-btn {
    padding: 0.8rem 1.5rem;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: transparent;
    color: #fff;
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-btn:hover {
    background: rgba(255, 255, 255, 0.1);
}

.filter-btn.active {
    background: var(--primary-gradient);
    color: #000;
    border: none;
}

.companies-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
}

.company-card {
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.3s ease;
}

.card-glass {
    background: var(--primary-bg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem;
    height: 100%;
    transition: all 0.3s ease;
}

.company-card:hover .card-glass {
    transform: translateY(-5px);
    background: var(--hover-bg);
}

.company-logo {
    width: 100px;
    height: 100px;
    margin: 0 auto 1.5rem;
    background: #fff;
    border-radius: 15px;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

.company-logo img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}

.company-info {
    text-align: center;
}

.company-info h3 {
    color: #fff;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
}

.company-type {
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 1rem;
}

.company-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
}

.tag {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    color: #888;
    font-size: 0.8rem;
}

@media (max-width: 768px) {
    .companies-container {
        padding: 2rem;
    }

    .companies-header h1 {
        font-size: 2rem;
    }
}
</style>

<script>
AOS.init({
    duration: 800,
    once: true
});

document.getElementById('companySearch').addEventListener('input', function(e) {
    const searchTerm = e.target.value.toLowerCase();
    document.querySelectorAll('.company-card').forEach(card => {
        const companyName = card.querySelector('h3').textContent.toLowerCase();
        card.style.display = companyName.includes(searchTerm) ? 'block' : 'none';
    });
});

document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        const filter = this.dataset.filter;
        document.querySelectorAll('.company-card').forEach(card => {
            if (filter === 'all') {
                card.style.display = 'block';
            } else {
                card.style.display = card.dataset.category === filter ? 'block' : 'none';
            }
        });
    });
});
</script>

