    --easy-color: #00ff95;
    --medium-color: #ffb800;
    --hard-color: #ff4d4d;
    --table-bg: #1a1a1a;
    --hover-bg: #2d2d2d;
}

.topic-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
}

.topic-header {
    background: linear-gradient(to right, #1a1a2e, #16213e);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.2);
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.topic-info h1 {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    color: #fff;
}

.topic-info h1 i {
    color: var(--accent-color);
}

.topic-stats {
    display: flex;
    gap: 2rem;
}

.stat {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #888;
}

.stat i {
    color: var(--accent-color);
}

.progress-circle {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: conic-gradient(var(--accent-color) var(--progress), #2d2d2d 0deg);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.progress-circle::before {
    content: '';
    position: absolute;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: var(--card-bg);
}

.progress-text {
    position: relative;
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--accent-color);
}

.problems-section {
    background: linear-gradient(to right, #1a1a2e, #16213e);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.2);
}

.filters {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: rgba(255,255,255,0.03);
    gap: 1rem;
}

.search-box {
    position: relative;
    flex: 1;
    max-width: 300px;
}

.search-box input {
    width: 100%;
    padding: 0.8rem 1rem 0.8rem 2.5rem;
    border-radius: 8px;
    border: 1px solid rgba(255,255,255,0.1);
    background: var(--primary-bg);
    color: #fff;
}

.search-box i {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #888;
}

.difficulty-filters {
    display: flex;
    gap: 0.5rem;
}

.filter-btn {
    padding: 0.5rem 1rem;
    border-radius: 6px;
    border: none;
    background: var(--primary-bg);
    color: #888;
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-btn:hover, .filter-btn.active {
    background: var(--accent-color);
    color: #000;
}

.table-container {
    overflow-x: auto;
}

.problems-table {
    width: 100%;
    border-collapse: collapse;
}

.problems-table th {
    padding: 1rem;
    text-align: left;
    background: rgba(255,255,255,0.02);
    color: #888;
    font-weight: 500;
}

.problems-table td {
    padding: 1rem;
    border-bottom: 1px solid rgba(255,255,255,0.05);
}

.problem-row {
    transition: background 0.3s ease;
}

.problem-row:hover {
    background: var(--hover-bg);
}

.status-icon {
    color: #888;
    font-size: 1.2rem;
}

.status-icon.solved {
    color: var(--easy-color);
}

.problem-name {
    color: #fff;
    font-weight: 500;
}

.difficulty-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    font-size: 0.9rem;
}

.difficulty-badge.easy { background: rgba(0,255,149,0.1); color: var(--easy-color); }
.difficulty-badge.medium { background: rgba(255,184,0,0.1); color: var(--medium-color); }
.difficulty-badge.hard { background: rgba(255,77,77,0.1); color: var(--hard-color); }

.solve-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    background: var(--accent-color);
    color: #000;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
}

.solve-btn:hover {
    transform: translateY(-2px);
}

.solve-btn.completed {
    background: var(--easy-color);
}

@media (max-width: 768px) {
    .topic-container {
        padding: 1rem;
    }
    
    .filters {
        flex-direction: column;
    }
    
    .search-box {
        max-width: 100%;
    }
    
    .problems-table th:nth-child(3),
    .problems-table td:nth-child(3) {
        display: none;
    }
}

.problem-card {
    border: 1px solid #ddd;
    padding: 15px;
    margin-bottom: 10px;
    border-radius: 5px;
}

.problem-card.solved {
    border-left: 4px solid #28a745;
    background-color: #f8fff8;
}

.status {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.9em;
}

.status.solved {
    color: #28a745;
    background-color: #e6ffe6;
}

.status.unsolved {
    color: #dc3545;
    background-color: #fff5f5;
}

.problem-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.problem-actions {
    display: flex;
    justify-content: flex-end;
}

.leetcode-setup {
    background: #1e1e2e;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 20px;
}

.leetcode-form {
    display: flex;
    gap: 15px;
    align-items: flex-end;
}

.form-group {
    flex: 1;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    color: #fff;
}

.form-group input {
    width: 100%;
    padding: 8px 12px;
    border: 1px solid #2d2d3d;
    border-radius: 4px;
    background: #2d2d3d;
    color: #fff;
}

.save-btn {
    background: #00b894;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    cursor: pointer;
    height: 35px;
}

.save-btn:hover {
    background: #00a884;
}
</style>

<script>
// Initialize AOS
AOS.init({
    duration: 800,
    once: true
});

// Set progress circle
document.querySelectorAll('.progress-circle').forEach(circle => {
    const progress = circle.dataset.progress;
    circle.style.setProperty('--progress', `${progress}%`);
});

// Search functionality
document.getElementById('searchInput').addEventListener('input', function(e) {
    const searchTerm = e.target.value.toLowerCase();
    document.querySelectorAll('.problem-row').forEach(row => {
        const title = row.querySelector('.problem-name').textContent.toLowerCase();
        row.style.display = title.includes(searchTerm) ? '' : 'none';
    });
});

// Difficulty filters
document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        const difficulty = this.dataset.difficulty;
        document.querySelectorAll('.problem-row').forEach(row => {
            if (difficulty === 'all') {
                row.style.display = '';
            } else {
                row.style.display = row.dataset.difficulty === difficulty ? '' : 'none';
            }
        });
    });
});

// Add this if the form exists
const leetcodeForm = document.getElementById('leetcodeForm');
if (leetcodeForm) {
    leetcodeForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const username = document.getElementById('leetcodeUsername').value;
        
        try {
            const response = await fetch('/dsa/set-leetcode-username', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username })
            });
            
            const data = await response.json();
            if (data.success) {
                window.location.reload();
            } else {
                alert('Failed to save username: ' + data.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to save username');
        }
    });
}

// Add this function after your existing event listeners
async function markProblemAsSolved(problemId) {
    try {
        const response = await fetch(`/dsa/problems/${problemId}/mark-solved`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });

        const data = await response.json();
        
        if (data.success) {
            // Update the UI
            // 1. Update the status badge
            const row = document.querySelector(`#validate-${problemId}`).closest('tr');
            const statusCell = row.querySelector('.status-cell');
            statusCell.innerHTML = `
                <span class="status-badge solved">
                    <i class="fas fa-check-circle"></i>
                </span>
            `;
            
            // 2. Update the action buttons
            const actionCell = row.querySelector('td:last-child');
            const solveBtn = actionCell.querySelector('.solve-btn');
            solveBtn.innerHTML = '<i class="fas fa-check"></i> Review';
            solveBtn.classList.add('completed');
            
            // Replace validate button with solved button
            const validateBtn = actionCell.querySelector('.validate-btn');
            validateBtn.outerHTML = `
                <button class="btn btn-success" disabled>
                    Solved âœ“
                </button>
            `;

            // 3. Update the problem count and progress
            const solvedCountElement = document.querySelector('.topic-stats .stat span');
            const [current, total] = solvedCountElement.textContent.split('/');
            const newCount = parseInt(current) + 1;
            solvedCountElement.textContent = `${newCount}/${total}`;

            // 4. Update progress percentage
            const progressElement = document.querySelector('.topic-stats .stat:last-child span');
            const newProgress = Math.round((newCount / parseInt(total)) * 100);
            progressElement.textContent = `Progress: ${newProgress}%`;

            // 5. Update progress circle
            const progressCircle = document.querySelector('.progress-circle');
            progressCircle.style.setProperty('--progress', `${newProgress}%`);
            progressCircle.querySelector('.progress-text').textContent = `${newProgress}%`;

            // 6. Add solved class to row
            row.classList.add('solved');
        } else {
            alert(data.message || 'Failed to mark problem as solved');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Failed to mark problem as solved');
    }
}
</script>

