<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-5">
    <h2>Manage Problems</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Problem Name</th>
                <th>Slug</th>
                <th>LeetCode Link</th>
                <th>Difficulty</th>
                <th>Topic</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (problems.length > 0) { %>
                <% problems.forEach(problem => { %>
                    <tr>
                        <td><%= problem.name %></td>
                        <td><%= problem.slug %></td>
                        <td><a href="<%= problem.leetcodeLink %>" target="_blank">View</a></td>
                        <td><%= problem.difficulty %></td>
                        <td><%= problem.topic.name %></td>
                        <td>
                            <button class="btn btn-danger btn-sm delete-problem" data-id="<%= problem._id %>">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="6" class="text-center">No problems found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
document.querySelectorAll('.delete-problem').forEach(button => {
    button.addEventListener('click', async function() {
        const problemId = this.dataset.id;
        if (confirm('Are you sure you want to delete this problem?')) {
            try {
                const response = await fetch(`/admin/problems/${problemId}`, {
                    method: 'DELETE'
                });
                if (response.ok) {
                    alert('Problem deleted successfully');
                    window.location.reload();
                } else {
                    const data = await response.json();
                    alert(data.error || 'Error deleting problem');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error deleting problem');
            }
        }
    });
});
</script>

